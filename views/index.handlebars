<div class="container text-center">
  <h1>Burger-Diary...</h1>
  <img src="/assets/img/hamburger.png" alt="" width="20%" height="20%">
  <div class="row">
    <div class="col">
      <h2>Burgers that are not devoured!</h2>
      <ul class="list-group-flush">
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers that are devoured!</h2>
      <ul class="list-group-flush">
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


<form class="create-form ">
  <h2>Add a Burger!</h2>
  {{!-- <label for="burg">Burger Name:</label> --}}
  {{!-- <br> --}}
<div class="form-group input-group w-50 mx-auto">
  <div class="input-group-prepend">
    <button class="btn btn-outline-warning" type="submit">Add Burger</button>
  </div>
  <input type="text" class="form-control"  id="burg" name="name">
</div>
    
</form>


</div>
